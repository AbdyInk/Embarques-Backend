# ========================================
# CULLIGAN EMBARQUES - CONFIGURACIÓN DE ENTORNO
# ========================================

# Puerto del servidor
PORT=4000

# Entorno de ejecución (development | production | test)
NODE_ENV=production

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS MSSQL
# ========================================

# Servidor de base de datos
DB_SERVER=localhost
DB_PORT=1433
DB_DATABASE=CulliganEmbarques
DB_USER=culligan_user
DB_PASSWORD=your_secure_password_here

# Configuraciones adicionales de conexión
DB_CONNECTION_TIMEOUT=30000
DB_REQUEST_TIMEOUT=30000
DB_POOL_MIN=2
DB_POOL_MAX=10

# Para conexiones con instancia nombrada (opcional)
# DB_INSTANCE=SQLEXPRESS

# Para conexiones con SSL (opcional)
# DB_ENCRYPT=true
# DB_TRUST_SERVER_CERTIFICATE=true

# ========================================
# CONFIGURACIÓN JWT
# ========================================

# Clave secreta para JWT (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production_2025

# Tiempo de expiración del token (ejemplos: 1h, 24h, 7d)
JWT_EXPIRES_IN=24h

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# CORS Origins permitidos (separados por comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Rate limiting (requests por minuto)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACIÓN DE ARCHIVOS
# ========================================

# Directorio para archivos de datos (JSON backup)
DATA_DIR=./data

# Habilitar respaldo en archivos JSON (true/false)
ENABLE_JSON_BACKUP=true

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================

# Nivel de logs (error | warn | info | debug)
LOG_LEVEL=info

# Directorio de logs
LOG_DIR=./logs

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================

# Health check endpoint habilitado
HEALTH_CHECK_ENABLED=true

# Métricas de rendimiento habilitadas
METRICS_ENABLED=false